<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentLogin">

    <fragment
        android:id="@+id/fragmentLogin"
        android:name="com.example.time2meet.FragmentLogin"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentMenu"
            app:destination="@id/fragmentMenu"
            app:popUpTo="@id/fragmentLogin"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/fragmentMenu"
        android:name="com.example.time2meet.FragmentMenu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" >

        <action
            android:id="@+id/action_fragmentMenu_to_fragmentMeetingMenu"
            app:destination="@id/fragmentMeetingMenu" />
        <action
            android:id="@+id/action_fragmentMenu_to_fragmentProfile"
            app:destination="@id/fragmentProfile" />
    </fragment>

    <fragment
        android:id="@+id/fragmentProfile"
        android:name="com.example.time2meet.FragmentProfile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/fragmentMeetingMenu"
        android:name="com.example.time2meet.FragmentMeetingMenu"
        android:label="fragment_meeting_menu"
        tools:layout="@layout/fragment_meeting_menu" />
</navigation>